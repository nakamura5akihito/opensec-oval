        </field>
        <field name="areaPatched" 
            type="io.opensec.oval.model.definitions.EntityObjectStringType">
            <bind-xml name="area_patched" node="element"/>
        </field>
        <field name="patchBase" 
            type="io.opensec.oval.model.definitions.EntityObjectStringType">
            <bind-xml name="patch_base" node="element"/>
        </field>
        <field name="filter" 
            type="io.opensec.oval.model.definitions.Filter"
            collection="collection">
            <bind-xml name="filter" node="element"/>
        </field>
    </class>

    <class name="io.opensec.oval.model.hpux.Patch53State"
        extends="io.opensec.oval.model.definitions.StateType">
